.article-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  list-style: none;
  margin: 0;
  padding: 0 16px;
}

.article-list__item {
  margin-bottom: 16px;
}

@media (min-width: 480px) {
  .article-list__item {
    max-width: 48%;
  }
}

@media (min-width: 840px) {
  .article-list__item {
    max-width: 32%;
  }
}

